    <profile>
        <subsystem xmlns="urn:jboss:domain:logging:3.0">
            <use-deployment-logging-config value="false"/>
            <console-handler name="CONSOLE">
                <level name="DEBUG"/>
                <formatter>
                    <pattern-formatter pattern="%d %-5p %c %l - %m%n"/>
                </formatter>
            </console-handler>
            <periodic-rotating-file-handler name="FILE" autoflush="true">
                <formatter>
                    <pattern-formatter pattern="%d %-5p %c %l - %m%n"/>
                </formatter>
                <file relative-to="jboss.server.log.dir" path="server.log"/>
                <suffix value=".yyyy-MM-dd"/>
                <append value="true"/>
            </periodic-rotating-file-handler>
            <periodic-rotating-file-handler name="OSS_API_FILE">
                <level name="DEBUG"/>
                <formatter>
                    <pattern-formatter pattern="%d %-5p %c %l - %m%n"/>
                </formatter>
                <file relative-to="jboss.server.log.dir" path="UnifiOSS_API.log"/>
                <suffix value=".yyyy-MM-dd"/>
                <append value="true"/>
            </periodic-rotating-file-handler>
            <periodic-rotating-file-handler name="OSS_FILE">
                <level name="DEBUG"/>
                <formatter>
                    <pattern-formatter pattern="%d %-5p %c %l - %m%n"/>
                </formatter>
                <file relative-to="jboss.server.log.dir" path="UnifiOSS.log"/>
                <suffix value=".yyyy-MM-dd"/>
                <append value="true"/>
            </periodic-rotating-file-handler>
            <logger category="OSS_API">
                <level name="DEBUG"/>
                <handlers>
                    <handler name="CONSOLE"/>
                    <handler name="OSS_API_FILE"/>
                </handlers>
            </logger>
            <logger category="OSS">
                <level name="DEBUG"/>
                <handlers>
                    <handler name="CONSOLE"/>
                    <handler name="OSS_FILE"/>
                </handlers>
            </logger>
            <logger category="com.arjuna">
                <level name="WARN"/>
            </logger>
            <logger category="org.jboss.as.config">
                <level name="DEBUG"/>
            </logger>
            <logger category="sun.rmi">
                <level name="WARN"/>
            </logger>
            <logger category="jacorb">
                <level name="WARN"/>
            </logger>
            <logger category="jacorb.config">
                <level name="ERROR"/>
            </logger>
            <logger category="org.apache.commons">
                <level name="ERROR"/>
            </logger>
            <logger category="org.apache.jasper.compiler">
                <level name="ERROR"/>
            </logger>
            <logger category="org.apache.tomcat">
                <level name="ERROR"/>
            </logger>
            <logger category="javax.xml.bind">
                <level name="ERROR"/>
            </logger>
            <logger category="org.jboss">
                <level name="INFO"/>
